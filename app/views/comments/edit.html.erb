<div class="col-xs-10 col-md-offset-1">
  <div class="edit-comment-form">
    <h1>Edit Comment</h1>
    <%= form_for ([@property, @comment]) do |f| %>  
      <div class="form-group">
        <%= f.text_area :description, placeholder: 'add a comment', id: :comment_description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.button :submit, class: "btn btn-success" %>
      </div>
    <% end %>

    <%= link_to 'Back', property_path(@property) %>
  </div>
</div>
